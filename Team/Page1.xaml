<Page x:Class="Team.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:Team"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     
      Title="Page1" Background="White" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
           

        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Width="180"  Grid.Column="0" Grid.ColumnSpan="2"   Margin="0 20 30 0">
            <ComboBox Name="ChoosePet" IsEditable="True" Height="35" IsReadOnly="True" Text="               Choose a pet" >

            </ComboBox>
            <TextBlock  VerticalAlignment="Center" Margin="30 0 0 0">  Description of the pet

            </TextBlock>
            <TextBox  Height="150" >

            </TextBox>
            <TextBlock HorizontalAlignment="Center" Margin="0 10 0 0">From:

            </TextBlock>
            <DatePicker Name="DateFrom" Margin="0 10 0 10" DisplayDateStart="{x:Static sys:DateTime.Today}" >


            </DatePicker>
            <TextBlock HorizontalAlignment="Center" >To:

            </TextBlock>
            <DatePicker Margin="0 10 0 10" DisplayDateStart="{x:Static sys:DateTime.Today}">

            </DatePicker>
            <TextBlock>How much are you ready to pay?

            </TextBlock>
            <Slider x:Name="Slider1"  Maximum="30000" Minimum="0" ValueChanged="Slider1_ValueChanged">

            </Slider>
            <TextBlock x:Name = "textBlock1" Text = "Current value: 0" />
            <Button Width="40" Background="MediumSeaGreen" Margin="0 5 0 10" Height="20">OK

            </Button>

        </StackPanel>
        <StackPanel  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" >
            <ListBox Height="300" Width="300" Margin="10"   Background="MediumSeaGreen" >

            </ListBox>
        </StackPanel>

    </Grid>
</Page>
