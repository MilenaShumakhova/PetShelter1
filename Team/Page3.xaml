<Page x:Class="Team.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Team"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     
      Title="Page3" Background="White" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>


        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" Grid.ColumnSpan="1" VerticalAlignment="Top"  Margin="0 10 30 0" HorizontalAlignment="Right" Source="/Images/avatars-000217852885-q3ge9g-t500x500.jpg" Width="150" Height="150"></Image>
        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0 0 0 130" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"  >
            <TextBlock FontSize="15"   FontWeight="Bold" > FullName*</TextBlock>

            <TextBlock FontSize="15" Margin="0 0 120 0"   FontWeight="Bold" >Email*</TextBlock>
            <TextBlock FontSize="15" FontWeight="Bold" >City*</TextBlock>
            <TextBlock FontSize="15" FontWeight="Bold" >Phone*</TextBlock>
            <TextBlock FontSize="15" FontWeight="Bold" >Address*</TextBlock>

            <TextBlock FontSize="15"  FontWeight="Bold"  >Password*</TextBlock>
          

        </StackPanel>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 20 0" Grid.Column=" 0"  Grid.ColumnSpan="2"  >

            <TextBox Name="textBoxFullName" MaxLength="35" Height="27" Width="230"  Margin="0 0 0 10" ></TextBox>

            <TextBox Name="textBoxEmail" Height="27" Width="230" MaxLength="35"  Margin="0 0 0 10"></TextBox>
            <TextBox Name="textBoxCity" Height="27" Width="230" MaxLength="35"  Margin="0 0 0 10"></TextBox>
            <TextBox Name="textBoxPhone" Height="27" Width="230" MaxLength="35"  Margin="0 0 0 10"></TextBox>
            <TextBox Name="textBoxAddress" Height="27" Width="230" MaxLength="35"  Margin="0 0 0 10"></TextBox>
            <PasswordBox Name="PasswordBoxPasswordRegistration" MaxLength="35"  PasswordChar="•" Height="27" Width="230" Margin="0 0 0 10" ></PasswordBox>
            
            <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Button Width="80" Height="30" FontSize="20" Background="MediumSeaGreen"   Margin="0 0 0 0"  >Change</Button>
                <Button Width="60" Height="30" FontSize="20"  Grid.Row="7" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Background="MediumSeaGreen" Margin="14 0 0 0"  >Save</Button>
            </StackPanel>


        </StackPanel>
    
    </Grid>
</Page>
